<div class="px-4 py-6 sm:px-0">
  <div class="max-w-2xl mx-auto">
    <!-- Header -->
    <div class="mb-8 text-center">
      <h1 class="text-4xl font-bold text-white">
        Parental Consent Required
      </h1>
      <p class="text-gray-400 mt-2">As a minor, you need parental consent to access all features</p>
    </div>

    <!-- Main Content Card -->
    <div class="bg-gray-800/90 backdrop-blur-md shadow-xl rounded-2xl border border-gray-700 p-8">

      <!-- Info Section -->
      <div class="bg-blue-900/20 border border-blue-500/30 rounded-xl p-6 mb-8">
        <div class="flex items-start space-x-4">
          <div class="flex-shrink-0">
            <div class="w-10 h-10 bg-gradient-to-r from-blue-500 to-blue-600 rounded-lg flex items-center justify-center">
              <i class="fas fa-info-circle text-white"></i>
            </div>
          </div>
          <div>
            <h3 class="text-lg font-semibold text-white mb-2">
              Why do we need parental consent?
            </h3>
            <p class="text-gray-300 text-sm leading-relaxed">
              Since you're under 18, we need your parent or guardian to provide consent for you to use our platform. This helps us protect your privacy and ensure a safe experience.
            </p>
          </div>
        </div>
      </div>

      <!-- Form -->
      <%= form_with model: @consent, local: true, class: "space-y-6" do |form| %>
        <!-- Error Messages -->
        <% if @consent.errors.any? %>
          <div class="bg-red-900/20 border border-red-500/30 rounded-xl p-6">
            <div class="flex items-start space-x-4">
              <div class="flex-shrink-0">
                <div class="w-10 h-10 bg-gradient-to-r from-red-500 to-red-600 rounded-lg flex items-center justify-center">
                  <i class="fas fa-exclamation-triangle text-white"></i>
                </div>
              </div>
              <div>
                <h3 class="text-lg font-semibold text-white mb-2">
                  <%= pluralize(@consent.errors.count, "error") %> prohibited this consent from being saved:
                </h3>
                <div class="text-gray-300 text-sm">
                  <ul class="list-disc list-inside space-y-1">
                    <% @consent.errors.full_messages.each do |message| %>
                      <li><%= message %></li>
                    <% end %>
                  </ul>
                </div>
              </div>
            </div>
          </div>
        <% end %>

        <!-- Form Fields -->
        <div class="space-y-6">
          <div>
            <%= form.label :parent_name, "Parent/Guardian Name", class: "block text-sm font-medium text-white mb-2" %>
            <%= form.text_field :parent_name,
                placeholder: "Jane Doe",
                class: "w-full px-4 py-3 bg-gray-700/50 border border-gray-600 rounded-lg text-white placeholder-gray-400 focus:outline-none focus:ring-2 focus:ring-green-500 focus:border-green-500 transition-colors duration-200",
                required: true %>
          </div>

          <div>
            <%= form.label :parent_email, "Parent/Guardian Email", class: "block text-sm font-medium text-white mb-2" %>
            <%= form.email_field :parent_email,
                placeholder: "parent@example.com",
                class: "w-full px-4 py-3 bg-gray-700/50 border border-gray-600 rounded-lg text-white placeholder-gray-400 focus:outline-none focus:ring-2 focus:ring-green-500 focus:border-green-500 transition-colors duration-200",
                required: true %>
            <p class="mt-2 text-sm text-gray-400">We'll send a verification email to this address</p>
          </div>

          <div>
            <%= form.label :parent_phone, "Parent/Guardian Phone (Optional)", class: "block text-sm font-medium text-white mb-2" %>
            <%= form.text_field :parent_phone,
                placeholder: "(555) 123-4567",
                class: "w-full px-4 py-3 bg-gray-700/50 border border-gray-600 rounded-lg text-white placeholder-gray-400 focus:outline-none focus:ring-2 focus:ring-green-500 focus:border-green-500 transition-colors duration-200" %>
          </div>
        </div>

        <!-- Next Steps Info -->
        <div class="bg-yellow-900/20 border border-yellow-500/30 rounded-xl p-6">
          <div class="flex items-start space-x-4">
            <div class="flex-shrink-0">
              <div class="w-10 h-10 bg-gradient-to-r from-yellow-500 to-yellow-600 rounded-lg flex items-center justify-center">
                <i class="fas fa-lightbulb text-white"></i>
              </div>
            </div>
            <div>
              <h3 class="text-lg font-semibold text-white mb-2">
                Next Steps
              </h3>
              <p class="text-gray-300 text-sm leading-relaxed">
                After you submit this form, we'll send a verification email to your parent/guardian. They'll need to click the link in that email to give consent for your account.
              </p>
            </div>
          </div>
        </div>

        <!-- Submit Button -->
        <div class="flex flex-col items-center space-y-4">
          <%= form.submit "Request Parental Consent",
              class: "w-full flex items-center justify-center px-6 py-3 bg-gradient-to-r from-green-500 to-emerald-500 text-white text-sm font-medium rounded-lg shadow-lg hover:from-green-600 hover:to-emerald-600 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-green-500 transition-all duration-200" %>

          <!-- Alternative Action -->
          <div class="text-center">
            <p class="text-sm text-gray-400">
              Already have parental consent?
              <%= link_to "Check status", parental_consents_path, class: "font-medium text-green-400 hover:text-green-300 transition-colors duration-200" %>
            </p>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>
